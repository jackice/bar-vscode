{
    "name": "bar",
    "displayName": "Build & Run",
    "description": "Add buttons to the VS Code status bar and assign a terminal command to them.",
    "version": "2.0.0",
    "publisher": "olback",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/.vscode/bar.conf.json",
        "onCommand:bar.init"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "bar.init",
                "title": "Bar: Init"
            },
            {
                "command": "bar.build",
                "title": "Bar: Build"
            },
            {
                "command": "bar.run",
                "title": "Bar: Run"
            },
            {
                "command": "bar.bar",
                "title": "Bar: Build and run"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "vscode": "^1.1.6"
    }
}
